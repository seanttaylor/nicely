{
    "__comments": "An riff on Mike Amundsen's Web Services Transition Language. Learn more here: http://rwcbook.github.io/wstl-spec/",
    "version": "0.0.1",
    "contact": "platform_engineering@omegalabs.io",
    "schema": "/static/schemas/westly.json",
    "docs": "",
    "app": "nicely",
    "transitions": {
        "allFeedPosts": {
            "name": "allFeedPosts",
            "rel": "feed:posts",
            "safe": true,
            "method": "GET",
            "title": "Get Nicely main feed"
        },
        "subscribeToFeed": {
            "name": "subscribeToFeed",
            "rel": "feed:realtime_updates",
            "safe": true,
            "method": "GET",
            "title": "Subscribe client to main feed"
        },
        "allUserPosts": {
            "name": "allUserPosts",
            "rel": "user:posts",
            "safe": true,
            "method": "GET",
            "title": "Get posts for a specified user"
        },
        "createPost": {
            "name": "createPost",
            "rel": "user:posts",
            "safe": false,
            "method": "POST",
            "title": "Create a new post as current user"
        }
    }
}